<h1 {{action 'toggleBody'}}>{{title}}</h1>
<p>
  Created {{formatDate created}}
</p>
{{#if isShowingBody}}
  <p>{{body}}</p>
{{/if}}
<p>
  <strong>Authors: </strong>
  {{#each authors as |author|}}
    {{author}},
  {{/each}}
</p>

<h4>Comments:</h4>
<ul>
  {{#each comments as |comment|}}
    <li><strong>{{comment.name}}</strong> - {{comment.content}}</li>
  {{/each}}
</ul>

<button {{action 'sayHello'}}>Say hello</button>

<hr>
<form {{action 'handleSubmit' on="submit"}}>
  <p>
    Name: {{input value=name}}
  </p>
  <p>
    Content: {{textarea value=content}}
  </p>
  <button type="submit">Click here</button>
</form>